                                <Line Grid.Row="13" Grid.Column="0" X2="1" Stretch="Fill" VerticalAlignment="Bottom" Grid.ColumnSpan="8" Stroke="DarkSlateGray"/>
                                <Line Grid.Row="14" Grid.Column="0" X2="1" Stretch="Fill" VerticalAlignment="Bottom" Grid.ColumnSpan="8" Stroke="DarkSlateGray"/>
                                <Line Grid.Row="15" Grid.Column="0" X2="1" Stretch="Fill" VerticalAlignment="Bottom" Grid.ColumnSpan="8" Stroke="DarkSlateGray"/>
                                <Line Grid.Row="16" Grid.Column="0" X2="1" Stretch="Fill" VerticalAlignment="Bottom" Grid.ColumnSpan="8" Stroke="DarkSlateGray"/>
                                <Line Grid.Row="17" Grid.Column="0" X2="1" Stretch="Fill" VerticalAlignment="Bottom" Grid.ColumnSpan="8" Stroke="DarkSlateGray"/>
                                <Line Grid.Row="18" Grid.Column="0" X2="1" Stretch="Fill" VerticalAlignment="Bottom" Grid.ColumnSpan="8" Stroke="DarkSlateGray"/>
                                <Line Grid.Row="19" Grid.Column="0" X2="1" Stretch="Fill" VerticalAlignment="Bottom" Grid.ColumnSpan="8" Stroke="DarkSlateGray"/>
                                <Line Grid.Row="20" Grid.Column="0" X2="1" Stretch="Fill" VerticalAlignment="Bottom" Grid.ColumnSpan="8" Stroke="DarkSlateGray"/>
                                <Line Grid.Row="21" Grid.Column="0" X2="1" Stretch="Fill" VerticalAlignment="Bottom" Grid.ColumnSpan="8" Stroke="DarkSlateGray"/>
                                <Line Grid.Row="22" Grid.Column="0" X2="1" Stretch="Fill" VerticalAlignment="Bottom" Grid.ColumnSpan="8" Stroke="DarkSlateGray"/>
                                <Line Grid.Row="23" Grid.Column="0" X2="1" Stretch="Fill" VerticalAlignment="Bottom" Grid.ColumnSpan="8" Stroke="DarkSlateGray"/>
                  
                                <Line Grid.Row="24" Grid.Column="0" X2="1" Stretch="Fill" VerticalAlignment="Bottom" Grid.ColumnSpan="8" Stroke="DarkSlateGray"/>
                                <Line Grid.Row="0" Grid.Column="0" Y2="1" Stretch="Fill" HorizontalAlignment="Left"  Grid.RowSpan="25" Stroke="DarkSlateGray"/>
                                <Line Grid.Row="0" Grid.Column="0" Y2="1" Stretch="Fill" HorizontalAlignment="Right" Grid.RowSpan="25" Stroke="DarkSlateGray"/>
                                <Line Grid.Row="0" Grid.Column="1" Y2="1" Stretch="Fill" HorizontalAlignment="Right" Grid.RowSpan="25" Stroke="DarkSlateGray"/>
                                <Line Grid.Row="0" Grid.Column="2" Y2="1" Stretch="Fill" HorizontalAlignment="Right" Grid.RowSpan="25" Stroke="DarkSlateGray"/>
                                <Line Grid.Row="0" Grid.Column="3" Y2="1" Stretch="Fill" HorizontalAlignment="Right" Grid.RowSpan="25" Stroke="DarkSlateGray"/>
                                <Line Grid.Row="0" Grid.Column="4" Y2="1" Stretch="Fill" HorizontalAlignment="Right" Grid.RowSpan="25" Stroke="DarkSlateGray"/>
                                <Line Grid.Row="0" Grid.Column="5" Y2="1" Stretch="Fill" HorizontalAlignment="Right" Grid.RowSpan="25" Stroke="DarkSlateGray"/>
                                <Line Grid.Row="0" Grid.Column="6" Y2="1" Stretch="Fill" HorizontalAlignment="Right" Grid.RowSpan="25" Stroke="DarkSlateGray"/>
                                <Line Grid.Row="0" Grid.Column="7" Y2="1" Stretch="Fill" HorizontalAlignment="Right" Grid.RowSpan="25" Stroke="DarkSlateGray"/>

                                <Canvas x:Name="xCanvas1" Grid.Column="1" Grid.Row="0" Grid.RowSpan="24" Background="Transparent"/>
                                <Canvas x:Name="xCanvas2" Grid.Column="2" Grid.Row="0" Grid.RowSpan="24" Background="Transparent"/>
                                <Canvas x:Name="xCanvas3" Grid.Column="3" Grid.Row="0" Grid.RowSpan="24" Background="Transparent"/>
                                <Canvas x:Name="xCanvas4" Grid.Column="4" Grid.Row="0" Grid.RowSpan="24" Background="Transparent"/>
                                <Canvas x:Name="xCanvas5" Grid.Column="5" Grid.Row="0" Grid.RowSpan="24" Background="Transparent"/>
                                <Canvas x:Name="xCanvas6" Grid.Column="6" Grid.Row="0" Grid.RowSpan="24" Background="Transparent"/>
                                <Canvas x:Name="xCanvas7" Grid.Column="7" Grid.Row="0" Grid.RowSpan="24" Background="Transparent"/>
                                <Label Grid.Row="0"  Grid.Column="0" Content="00:00" Style="{StaticResource tLabel}"/>
                                <Label Grid.Row="1"  Grid.Column="0" Content="01:00" Style="{StaticResource tLabel}"/>
                                <Label Grid.Row="2"  Grid.Column="0" Content="02:00" Style="{StaticResource tLabel}"/>
                                <Label Grid.Row="3"  Grid.Column="0" Content="03:00" Style="{StaticResource tLabel}"/>
                                <Label Grid.Row="4"  Grid.Column="0" Content="04:00" Style="{StaticResource tLabel}"/>
                                <Label Grid.Row="5"  Grid.Column="0" Content="05:00" Style="{StaticResource tLabel}"/>
                                <Label Grid.Row="6"  Grid.Column="0" Content="06:00" Style="{StaticResource tLabel}"/>
                                <Label Grid.Row="7"  Grid.Column="0" Content="07:00" Style="{StaticResource tLabel}"/>
                                <Label Grid.Row="8"  Grid.Column="0" Content="08:00" Style="{StaticResource tLabel}"/>
                                <Label Grid.Row="9"  Grid.Column="0" Content="09:00" Style="{StaticResource tLabel}"/>
                                <Label Grid.Row="10" Grid.Column="0" Content="10:00" Style="{StaticResource tLabel}"/>
                                <Label Grid.Row="11" Grid.Column="0" Content="11:00" Style="{StaticResource tLabel}"/>
                                <Label Grid.Row="12" Grid.Column="0" Content="12:00" Style="{StaticResource tLabel}"/>
                                <Label Grid.Row="13" Grid.Column="0" Content="13:00" Style="{StaticResource tLabel}"/>
                                <Label Grid.Row="14" Grid.Column="0" Content="14:00" Style="{StaticResource tLabel}"/>
                                <Label Grid.Row="15" Grid.Column="0" Content="15:00" Style="{StaticResource tLabel}"/>
                                <Label Grid.Row="16" Grid.Column="0" Content="16:00" Style="{StaticResource tLabel}"/>
                                <Label Grid.Row="17" Grid.Column="0" Content="17:00" Style="{StaticResource tLabel}"/>
                                <Label Grid.Row="18" Grid.Column="0" Content="18:00" Style="{StaticResource tLabel}"/>
                                <Label Grid.Row="19" Grid.Column="0" Content="19:00" Style="{StaticResource tLabel}"/>
                                <Label Grid.Row="20" Grid.Column="0" Content="20:00" Style="{StaticResource tLabel}"/>
                                <Label Grid.Row="21" Grid.Column="0" Content="21:00" Style="{StaticResource tLabel}"/>
                                <Label Grid.Row="22" Grid.Column="0" Content="22:00" Style="{StaticResource tLabel}"/>
                                <Label Grid.Row="23" Grid.Column="0" Content="23:00" Style="{StaticResource tLabel}"/>
                            </Grid>
                        </ScrollViewer>
                        <Line Grid.Row="1" Grid.Column="0" Y2="1" Stretch="Fill" HorizontalAlignment="Left"  Stroke="DarkSlateGray"/>
                        <Line Grid.Row="1" Grid.Column="0" Y2="1" Stretch="Fill" HorizontalAlignment="Right" Stroke="DarkSlateGray"/>
                        <Line Grid.Row="1" Grid.Column="1" Y2="1" Stretch="Fill" HorizontalAlignment="Right" Stroke="DarkSlateGray"/>
                        <Line Grid.Row="1" Grid.Column="2" Y2="1" Stretch="Fill" HorizontalAlignment="Right" Stroke="DarkSlateGray"/>
                        <Line Grid.Row="1" Grid.Column="3" Y2="1" Stretch="Fill" HorizontalAlignment="Right" Stroke="DarkSlateGray"/>
                        <Line Grid.Row="1" Grid.Column="4" Y2="1" Stretch="Fill" HorizontalAlignment="Right" Stroke="DarkSlateGray"/>
                        <Line Grid.Row="1" Grid.Column="5" Y2="1" Stretch="Fill" HorizontalAlignment="Right" Stroke="DarkSlateGray"/>
                        <Line Grid.Row="1" Grid.Column="6" Y2="1" Stretch="Fill" HorizontalAlignment="Right" Stroke="DarkSlateGray"/>
                        <Line Grid.Row="1" Grid.Column="7" Y2="1" Stretch="Fill" HorizontalAlignment="Right" Stroke="DarkSlateGray"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
