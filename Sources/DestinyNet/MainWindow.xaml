<Window x:Class="DestinyNet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:Converters;assembly=Destiny.Core"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        MinWidth="1460" MinHeight="800"
        Width="1460" Height="800"
        Title="MainWindow">
    <Window.Resources>
        <converters:BoolToBlurUsageConverter x:Key="BoolToBlurUsageConverter"/>
        <converters:BoolToInvertedValueConverter x:Key="BoolToInvertedValueConverter"/> 
    </Window.Resources>
    <Grid>
        <tb:TaskbarIcon Visibility="Visible" ToolTipText="Desteny"  IconSource="pack://application:,,,/Images/Destiny_Icon.ico"
                        TrayLeftMouseDown="TaskbarIcon_TrayLeftMouseDown">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Close" Click="MenuItem_Click"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
        <Grid IsEnabled="{Binding DialogViewsManager.FreezeBackground, Converter={StaticResource BoolToInvertedValueConverter}}" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="300"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0"  Grid.ColumnSpan="2" Grid.Column="0" 
                  Background="Silver"/>
            <Grid Grid.Row="0" Grid.Column="2" 
                  Background="#FFCCCCCC ">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1" Content="Meal" Margin="10,5" Visibility="Hidden"/>
                <Button x:Name="xButtonToDo" Grid.Column="2" Content="To-Do" Margin="10,5" Command="{Binding ToDoViewCommand}" Visibility="Hidden"/>
                <Button Grid.Column="3" Content="People" Margin="10,5" Visibility="Hidden"/>
                <Button x:Name="xButtonWeek" Grid.Column="4" Content="Week" Margin="10,5" Command="{Binding WeekViewCommand}"/>
                <Button x:Name="xButtonMonth" Grid.Column="5" Content="Month" Margin="10,5" Command="{Binding MonthViewCommand}"/>
                <Button x:Name="xButtonYear" Grid.Column="6" Content="Year" Margin="10,5" Command="{Binding YearViewCommand}"/>
            </Grid>


            <Border Grid.Column="0" Grid.Row="1" Grid.RowSpan="3" Grid.ColumnSpan="2"
                    Background="WhiteSmoke"/>


            <ContentControl Grid.Column="2" Grid.Row="1" Grid.RowSpan="3" 
                            Content="{Binding Path=SelectedViewModel}"/>


            <ContentControl Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2"  
                            Content="{Binding Path=ToolPanel}"/>
            <Grid Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0"
                    VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch"
                    Background="Transparent" BorderBrush="Transparent" Command="{Binding SettingsCommand}">
                        <Image VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Source="/Images/Settings.png" Stretch="Fill"/>
                </Button>
            </Grid>

            <Grid.Effect>
                <BlurEffect KernelType="Gaussian" Radius="{Binding DialogViewsManager.FreezeBackground, Converter={StaticResource BoolToBlurUsageConverter}}" />
            </Grid.Effect>
        </Grid>
        <Grid x:Name="DialogContent"
              Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="3"
              HorizontalAlignment="Center" VerticalAlignment="Center">
            <ContentControl VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                Content="{Binding DialogViewsManager.CurrentDialogView}" />
        </Grid>
    </Grid>
</Window>
