<UserControl x:Class="DestinyNetViews.ToolPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DestinyNet"
             xmlns:MonthView="clr-namespace:UIMonthControl;assembly=MonthControl"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="400">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="300"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="1">
            <Grid Background="#FFCCCCCC ">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Grid.Row="0" Height="40" Background="WhiteSmoke" Content="Calendar"
                       VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
                <Label Grid.Column="1" Grid.Row="0" Height="40" Background="WhiteSmoke" Content="+"
                       FontSize="20"
                       VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            </Grid>
            <ItemsControl ItemsSource="{Binding Path=Calendars}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Grid.Column="0" Grid.Row="1" Grid.RowSpan="3" Background="{Binding Path=Color}">
                            <CheckBox Height="40"  Margin="20,0,20,0" 
                                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                                          VerticalContentAlignment="Center" HorizontalContentAlignment="Left" 
                                          IsChecked="{Binding Path=Enabled}" Content="{Binding Path=Name}"></CheckBox>
                        </Border>
                    </DataTemplate>

                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
        <MonthView:MonthControl  Grid.Row="0" Margin="20,50,20,50"  Date="{Binding Path=Date}">
        </MonthView:MonthControl>

    </Grid>
</UserControl>
