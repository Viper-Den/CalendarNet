<UserControl x:Class="DestinyNetViews.MonthView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Month="clr-namespace:UIMonthControl;assembly=MonthControl"
             xmlns:MonthView="clr-namespace:MonthEvent;assembly=MonthEventControl"
             xmlns:DestinyNet="clr-namespace:DestinyNet"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=DestinyNet:MonthViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <MonthView:MonthEventControl Margin="20,20,20,20" Background="White"
            Date="{Binding Path=Date}" Events="{Binding Path=Events}">
        </MonthView:MonthEventControl>
    </Grid>
</UserControl>
