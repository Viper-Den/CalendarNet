<UserControl x:Class="DestinyNet.Menu.RepeatWeekView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:MonthView="clr-namespace:UIMonthControl;assembly=MonthControl"
             xmlns:local="clr-namespace:DestinyNet.Menu"
             mc:Ignorable="d" 
             Background="Transparent"
             Height="auto" Width="auto">
    <StackPanel>
        <StackPanel  Orientation="Horizontal" Margin="5">
            <Label Content="каждый" VerticalContentAlignment="Center"/>
            <MonthView:IntBox Width="20" Margin="5" Value="{Binding Path=Step}"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            <Label Content="неделю" VerticalContentAlignment="Center"/>
        </StackPanel>
           <StackPanel  Orientation="Horizontal" Margin="5">
            <Label Content="Повторять до" VerticalContentAlignment="Center"/>
            <MonthView:IntBox Width="80" Margin="5" Value="{Binding Path=RepeatCount}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        </StackPanel>
    </StackPanel>
</UserControl>
