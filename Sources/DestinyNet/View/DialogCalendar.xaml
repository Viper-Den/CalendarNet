<UserControl x:Class="DestinyNetViews.DialogCalendar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             Background="White" 
             d:DesignHeight="100" d:DesignWidth="250">
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <xctk:ColorPicker Grid.Row="1" Margin="5,5"></xctk:ColorPicker>
        <Button Grid.Row="2" Content="Ok"  Margin="5,5"></Button>
        <TextBox SpellCheck.IsEnabled="True" Language="ru-ru" Grid.Row="0" Margin="5,5"></TextBox>
    </Grid>
</UserControl>
